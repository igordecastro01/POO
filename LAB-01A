public class Paciente {

    private String nome;
    private int idade;
    private float altura;
    private float peso;

    public String getNome() {
        return nome;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    public int getIdade() {
        return idade;
    }

    public void setIdade(int idade) {
        this.idade = idade;
    }

    public float getAltura() {
        return altura;
    }

    public void setAltura(float altura) {
        this.altura = altura;
    }

    public float getPeso() {
        return peso;
    }

    public void setPeso(float peso) {
        this.peso = peso;
    }

    public float calcularIMC() {
        if (getIdade() < 19 || getPeso() < 10 || getAltura() < 0.3) {
            return 0;
        }
        
        return peso / (altura * altura);
    }

    public String gerarRelatorio() {
        if (nome == null || nome.trim().equals("") || idade == 0 || altura == 0.0f || peso == 0.0f) {
            return "Entre com todos os dados do paciente!";
        }

        float imc = calcularIMC();
        String classificacao;

        if (imc < 18.5f) {
            classificacao = "Abaixo do Normal";
        } else if (imc <= 24.9f) {
            classificacao = "Normal";
        } else if (imc <= 29.9f) {
            classificacao = "Sobrepeso";
        } else if (imc <= 34.9f) {
            classificacao = "Obesidade grau I";
        } else if (imc <= 39.9f) {
            classificacao = "Obesidade grau II";
        } else {
            classificacao = "Obesidade grau III";
        }

        String relatorio = String.format("%s, %d anos, %.1fm, %.1fkg", nome, idade, altura, peso);
        String imcFormatado = String.format("%.6f", imc);

        return relatorio + "\nIMC: " + imcFormatado + " (" + classificacao + ")";
    }
}
